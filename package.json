{
  "name": "@octod/thestate",
  "description": "A tiny state manager writter in Rescript",
  "version": "0.2.1",
  "types": "./src/Thestate.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": "./src/Thestate.mjs",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@rescript/react": "^0.10.3",
    "react": "^17.0.2",
    "rescript": "^9.1.4"
  },
  "scripts": {
    "build": "npm run clean && rescript build -with-deps && npm run postbuild",
    "clean": "rescript clean && gentype -clean",
    "deploy": "npm run build && cd lib && npm run publish",
    "postbuild": "node scripts/postbuild.js",
    "start": "rescript build -w",
    "test": "rescript build -with-deps && retest src/tests/*.test.mjs"
  },
  "devDependencies": {
    "gentype": "^4.1.0",
    "rescript-test": "^3.1.0"
  },
  "keywords": [
    "rescript",
    "state manager",
    "state",
    "react"
  ]
}
