{
  "name": "thestate",
  "description": "A tiny state manager writter in Rescript",
  "version": "1.0.0",
  "main": "lib/js/Thestate.js",
  "module": "lib/es6/Thestate.mjs",
  "types": "lib/es6/Thestate.d.ts",
  "exports": {
    ".": {
      "import": "./lib/es6/Thestate.mjs",
      "require": "./lib/js/Thestate.js"
    },
    "./src": {
      "import": "./lib/es6/Thestate.mjs",
      "require": "./lib/js/Thestate.js"
    },
    "./src/Thestate.mjs": {
      "import": "./lib/es6/Thestate.mjs",
      "require": "./lib/js/Thestate.js"
    }
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "rescript": "^9.1.4"
  },
  "scripts": {
    "build": "npm run clean && rescript build -with-deps && npm run postbuild",
    "clean": "rescript clean && gentype -clean",
    "deploy": "npm run build && cd lib && npm run publish",
    "postbuild": "node scripts/postbuild.js",
    "start": "rescript build -w",
    "test": "rescript build -with-deps && retest lib/es6/src/tests/*.test.mjs"
  },
  "devDependencies": {
    "gentype": "^4.1.0",
    "rescript-test": "^3.1.0"
  }
}
